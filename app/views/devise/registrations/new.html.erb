<div class="register-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="register-header">
      <a href="#" class="back-link"><i class="fas fa-arrow-left"></i></a>
      <h2>REGISTER</h2>
      <div class="actions">
        <%= f.submit "Next" %>
      </div>
    </div>

    <div class="upload-pp">
    <div><i class="fas fa-user-circle"></i></div>
    <p>Upload picture</p>
    </div>

    <span class="register-span"></span>

    <div class="fullname-field">
    <%= f.text_field :name, class: "register-name", autofocus: true, autocomplete: "name", placeholder: "Full name" %>
    </div>

    <span class="register-span"></span>

    <div class="email-field">
      <%= f.email_field :email, class: "register-email", autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <span class="register-span"></span>

    <div class="password-field">
      <%= f.password_field :password, class: "register-pass", autocomplete: "new-password", placeholder: "Password" %>
    </div>

    <span class="register-span"></span>

    <div class="confirm-field">
      <%= f.password_field :password_confirmation, class: "confirm-pass", autocomplete: "new-password", placeholder: "Confirm password" %>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>

