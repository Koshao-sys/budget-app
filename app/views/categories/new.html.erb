<div class="category-header">
  <%= link_to request.referrer, class: "back-link" do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>
  <h2>ADD CATEGORY</h2>
  <i class="fas fa-search"></i>
</div>
<div class="container mt-3">
  <%= form_with model: @category, url:categories_path do |f| %>
    <div class="form-group mb-3">
      <%= f.text_field :name,  class:"form-control", Placeholder:"Name"%>
    </div>
    <div class="form-group mb-3">
      <%= f.text_field :icon, class:"form-control", placeholder:"Icon url here" %>
    </div>
    <%= f.submit "Add Category",class:"btn btn-primary btn-sm" %>
  </div>
<% end %>